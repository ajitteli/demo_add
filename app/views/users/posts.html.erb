<b>Posts by: <%= link_to @user.name, @user %></b>
<% if @user_posts.empty? %>
  No posts are created by <%= @user.name %>
<% else %>
<table class="table">
  <tr>
    <th>Post</th>
    <th>Date</th>
  </tr>
  <% @user_posts.each do |post| %>
  <tr>
    <td><%= post.content%></td>
    <td><%= post.updated_at.strftime('%x %X')%></td>
  </tr>
  <% end %>
</table>
<% end %>
<%= link_to 'Create', new_micropost_path, :user_id => @user.id %>

