<div class="container">
<h4><a href="”#”">Listing Posts</a></h4>
<table class="table">
  <tr>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @microposts.each do |micropost| %>
  <tr>
    <td><%= link_to micropost.content, micropost %></td>
    <td><%= link_to micropost.user.name, user_path(micropost.user) %></td>
    <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New Post', new_micropost_path %>
</div>