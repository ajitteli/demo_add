<div class="form-actions">
<h4>Sign Up</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-inline">
    <div class="input-prepend"><%= f.text_field :name, autofocus: true, calss: "input-mini", placeholder: "Name" %></div>
    <div class="input-prepend"><%= f.email_field :email, placeholder: "Email" %></div>
  </div>&nbsp;
  <div class="form-inline">
    <div class="input-prepend"><%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></div>
    <div class="input-prepend"><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %></div>
    </div>&nbsp;
    <div class="btn-small"><%= f.submit "Sign Up" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
